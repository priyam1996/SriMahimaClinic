<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/border">
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Date here"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/tv1_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:text="Registration No :"
        android:textStyle="bold"
        android:textColor="#2D312E  "
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/tv2_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Registration number"
        android:layout_toRightOf="@id/tv1_reg"
        android:layout_below="@id/date"
        android:layout_marginTop="2dp"
        android:paddingLeft="3dp"/>
    <TextView
        android:id="@+id/tv1_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1_reg"
        android:text="Appoinment Time :"
        android:textStyle="bold"
        android:textColor="#2D312E  "
        android:textSize="15sp"
       android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/tv2_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Appoinment Time"
        android:layout_toRightOf="@id/tv1_time"
        android:layout_below="@id/tv2_reg"
        android:layout_marginTop="6dp"
        android:paddingLeft="3dp"/>
    <TextView
        android:id="@+id/tv1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1_time"
        android:text="Patient Name :"
        android:textStyle="bold"
        android:textColor="#2D312E  "
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/tv2_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Patient Name"
        android:layout_toRightOf="@id/tv1_name"
        android:layout_below="@id/tv2_time"
        android:layout_marginTop="7dp"
        android:paddingLeft="3dp"/>
    <TextView
        android:id="@+id/tv1_disease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1_name"
        android:text="Disease :"
        android:textStyle="bold"
        android:textColor="#2D312E  "
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/tv2_disease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Disease"
        android:layout_toRightOf="@id/tv1_disease"
        android:layout_below="@id/tv2_name"
        android:layout_marginTop="7dp"
        android:paddingLeft="3dp"/>


</RelativeLayout>
</android.support.v7.widget.CardView>